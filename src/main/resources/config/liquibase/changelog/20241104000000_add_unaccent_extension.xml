<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Add PostgreSQL unaccent extension for accent-insensitive searches.
        This extension removes accents from text, allowing better address matching.
        Example: "RÃ©sidence" matches "residence" or "RES"
    -->
    <changeSet id="20241104000000-1" author="system">
        <sql>
            CREATE EXTENSION IF NOT EXISTS unaccent;
        </sql>
        <rollback>
            DROP EXTENSION IF EXISTS unaccent;
        </rollback>
    </changeSet>

</databaseChangeLog>

